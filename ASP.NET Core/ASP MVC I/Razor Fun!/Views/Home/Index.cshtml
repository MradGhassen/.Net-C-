<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1 style="margin: 20px 40px;">Here are some delicious foods!</h1>
<div style="margin: 20px 80px;">
@{
    string[] dishes = { "Apple Pie", "Burritos", "Clams Casino", "Donuts" };

    foreach (string dish in dishes)
    {
        if (dish.StartsWith("C"))
        {
            <p style="color:red;">@dish</p>
        }
        else
        {
            <p>@dish</p>
        }
    }
}
</div>
</body>
</html>